<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.UI.JavaFX.Controllers.MainController"
            prefHeight="650" prefWidth="1450.0"
            stylesheets="./app/UI/style.css"
            fx:id="mainBorderPane"
            onMouseClicked="#mainFormClicked">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <top>
        <!--Form Label-->
        <Label fx:id="formLabel">

            <padding><Insets bottom="15" /></padding>

        </Label>
    </top>

    <center>

        <!-- HBox to hold other controls in center of BorderPane-->
        <HBox spacing="20">

        <padding><Insets top="15" right="15" bottom="15" left="60"/></padding>

            <!-- Pane for customers -->
            <Pane GridPane.columnIndex="1" GridPane.rowIndex="1"
                  GridPane.columnSpan="2" GridPane.rowSpan="3"
                  style="-fx-border-color: white; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 5">

            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            </Pane>

        </HBox>

        <!-- HBox to hold other controls in center of BorderPane-->
        <HBox spacing="20">

            <padding><Insets top="15" right="15" bottom="15" left="60"/></padding>

            <!-- Pane for customers -->
            <Pane GridPane.columnIndex="1" GridPane.rowIndex="1"
                  GridPane.columnSpan="2" GridPane.rowSpan="3"
                  style="-fx-border-color: white; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 5">

                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                <!-- VBox that will hold labels, buttons, and tables for customers -->
                <VBox>

                    <!-- HBox for label and search bar -->
                    <HBox alignment="CENTER" spacing="10">
                        <padding><Insets bottom="15" top="15"/></padding>

                        <Label fx:id="customerLabel">
                            <padding><Insets right="20"/></padding>
                        </Label>
                    </HBox>

                    <!-- HBox for customer table -->
                    <HBox alignment="CENTER">
                        <padding><Insets left="20" /></padding>
                        <TableView style="-fx-background-color: #808080;" fx:id="customerTable">

                            <columns >
                                <TableColumn fx:id="customerIDColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="customerNameColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="customerAddressColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="customerZipCode" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="customerPhoneNumber" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="customerDivision" style="-fx-background-color: #545454;"/>
                            </columns>
                        </TableView>
                    </HBox>

                    <!-- HBox for add/modify/delete -->
                    <HBox spacing="10" alignment="BOTTOM_RIGHT">
                        <padding><Insets left = "5" top="15" right = "5" bottom="5"/></padding>

                        <Button fx:id="addCustomer" onAction="#handleAddCustomer">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                        <Button fx:id="modifyCustomer" onAction="#handleModifyCustomer">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                        <Button fx:id="deleteCustomer" onAction="#handleDeleteCustomer">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                    </HBox>
                </VBox>
            </Pane>

            <!-- Pane for appointments -->
            <Pane GridPane.columnIndex="1" GridPane.rowIndex="1"
                  GridPane.columnSpan="2" GridPane.rowSpan="3"
                  style="-fx-border-color: white; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 5">

                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                <!-- VBox that will hold labels, buttons, and tables for appointments -->
                <VBox>

                    <!-- HBox for label and search bar -->
                    <HBox alignment="CENTER" spacing="10">
                        <padding><Insets bottom="15" top="15"/></padding>

                        <Label fx:id="appointmentLabel">
                            <padding><Insets right="20"/></padding>
                        </Label>

                    <!--Sort appointments by week-->
                        <RadioButton fx:id="sortByWeek" onAction="#weeklyChecked" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="sortAppointmentsBy"/>
                            </toggleGroup>
                        </RadioButton>

                        <!--Sort appointments by month-->
                        <RadioButton fx:id="sortByMonth" onAction="#monthlyChecked">
                            <toggleGroup>
                                <fx:reference source ="sortAppointmentsBy"/>
                            </toggleGroup>
                        </RadioButton>
                    </HBox>

                    <!-- HBox for appointment table -->
                    <HBox alignment="CENTER">
                        <padding><Insets left="20" /></padding>
                        <TableView style="-fx-background-color: #808080;" fx:id="appointmentTable">

                            <columns >
                                <TableColumn fx:id="appointmentIDColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentTitleColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentDescriptionColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentLocationColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentContactColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentTypeColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentStartColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentEndColumn" style="-fx-background-color: #545454;"/>
                                <TableColumn fx:id="appointmentCustomerIDColumn" style="-fx-background-color: #545454;"/>
                            </columns>
                        </TableView>
                    </HBox>

                    <!-- HBox for add/modify/delete -->
                    <HBox spacing="10" alignment="BOTTOM_RIGHT">
                        <padding><Insets left = "5" top="15" right = "5" bottom="5"/></padding>

                        <Button fx:id="addAppointment" onAction="#handleAddAppointment">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                        <Button fx:id="modifyAppointment" onAction="#handleModifyAppointment">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                        <Button fx:id="deleteAppointment" onAction="#handleDeleteAppointment">
                            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
                        </Button>

                    </HBox>
                </VBox>
            </Pane>

        </HBox>

    </center>

    <bottom>
        <!-- Exit button for form -->
        <Button fx:id="exitForm" onAction="#handleExitForm" BorderPane.alignment="BOTTOM_RIGHT">
            <padding><Insets top="5" left="5" bottom="5" right="5"/></padding>
        </Button>
    </bottom>

</BorderPane>
